#!/usr/bin/env bash
#
# Show time machine log
#
# Original source - https://discussions.apple.com/thread/250226175

set -o pipefail
if [[ -n "$DEBUG" ]]; then
  set -x
fi

log show --predicate 'subsystem == "com.apple.TimeMachine"' --info --last 6h | grep -F 'eMac' | grep -Fv 'etat' | awk -F']' '{print substr($0,1,19), $NF}' 